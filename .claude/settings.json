{
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch(domain:clerk.com)",
      "Bash(git add:*)",
      "Bash(git push:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(dcu:*)",
      "Bash(git commit:*)",
      "WebFetch(domain:code.visualstudio.com)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/workspaces/uspark2/scripts/claude-hook-check-push.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'file=$(echo \"$CLAUDE_TOOL_INPUT\" | jq -r .file_path); if [[ $file == *.ts || $file == *.tsx || $file == *.js || $file == *.jsx ]]; then cd turbo && pnpm format; fi'"
          }
        ]
      }
    ]
  }
}