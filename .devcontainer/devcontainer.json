{
  "name": "USpark Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "remoteUser": "uspark",
  "forwardPorts": [4983, 5432],
  "containerEnv": {
    "CLAUDE_CONFIG_DIR": "/home/uspark/.config/claude",
    "HISTFILE": "/home/uspark/.cache/.zsh_history"
  },
  "postCreateCommand": "mkdir -p /home/uspark/.config /home/uspark/.cache /home/uspark/.local/share/com.vercel.cli /home/uspark/.local/bin && sudo chown -R uspark:uspark /home/uspark/.config /home/uspark/.cache /home/uspark/.local",
  "customizations": {
    "vscode": {
      "settings": {
        "sqltools.connections": [
          {
            "previewLimit": 50,
            "server": "db",
            "port": 5432,
            "driver": "PostgreSQL",
            "name": "local",
            "username": "postgres",
            "database": "postgres",
            "password": ""
          }
        ],
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/usr/bin/zsh"
          }
        }
      }
    }
  }
}
