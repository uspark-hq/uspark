{
  "name": "USpark Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "remoteUser": "vscode",
  // 端口转发配置
  // 4983: 开发工具端口 (如 Vitest UI 测试界面等)
  // 5432: PostgreSQL 数据库端口
  "forwardPorts": [4983, 5432],
  "containerEnv": {
    "CLAUDE_CONFIG_DIR": "/home/vscode/.config/claude",
    "HISTFILE": "/home/vscode/.cache/.zsh_history"
  },
  "postCreateCommand": "mkdir -p /home/vscode/.config /home/vscode/.cache /home/vscode/.local/share/com.vercel.cli /home/vscode/.local/bin && sudo chown -R vscode:vscode /home/vscode/.config /home/vscode/.cache /home/vscode/.local",
  "customizations": {
    "vscode": {
      "settings": {
        "sqltools.connections": [
          {
            "previewLimit": 50,
            "server": "db",
            "port": 5432,
            "driver": "PostgreSQL",
            "name": "local",
            "username": "postgres",
            "database": "postgres",
            "password": ""
          }
        ],
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/usr/bin/zsh"
          }
        }
      }
    }
  }
}
