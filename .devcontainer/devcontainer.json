{
  "name": "USpark Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "remoteUser": "vscode",
  "forwardPorts": [4983, 5432],
  "containerEnv": {
    "CLAUDE_CONFIG_DIR": "/home/vscode/.config/claude",
    "HISTFILE": "/home/vscode/.cache/.zsh_history"
  },
  "postCreateCommand": "sudo chown -R vscode:vscode /home/vscode/.cache /home/vscode/.local && echo 'Dev container initialized successfully'",
  "customizations": {
    "vscode": {
      "settings": {
        "sqltools.connections": [
          {
            "previewLimit": 50,
            "server": "db",
            "port": 5432,
            "driver": "PostgreSQL",
            "name": "local",
            "username": "postgres",
            "database": "postgres",
            "password": ""
          }
        ],
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/usr/bin/zsh"
          }
        }
      }
    }
  }
}
