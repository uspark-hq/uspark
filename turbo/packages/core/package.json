{
  "name": "@uspark/core",
  "version": "0.24.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./contract-fetch": {
      "import": "./src/contract-fetch.ts",
      "types": "./src/contract-fetch.ts"
    },
    "./contracts/*": {
      "import": "./src/contracts/*.ts",
      "types": "./src/contracts/*.ts"
    },
    "./yjs-filesystem": {
      "import": "./src/yjs-filesystem/index.ts",
      "types": "./src/yjs-filesystem/index.ts"
    }
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@uspark/eslint-config": "workspace:*",
    "@uspark/typescript-config": "workspace:*",
    "eslint": "^9.34.0",
    "msw": "^2.11.1",
    "typescript": "5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@ts-rest/core": "3.53.0-rc.1",
    "js-sha256": "^0.11.1",
    "yjs": "^13.6.27",
    "zod": "^4.1.5"
  }
}
