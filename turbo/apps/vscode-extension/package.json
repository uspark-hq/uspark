{
  "name": "uspark-sync",
  "displayName": "uSpark Auto Sync",
  "description": "Automatically sync workspace with uSpark - seamless file synchronization for your projects",
  "version": "0.2.2",
  "publisher": "uSpark",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "sync",
    "uspark",
    "cloud",
    "collaboration",
    "file-sync"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/uspark-hq/uspark.git",
    "directory": "turbo/apps/vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/uspark-hq/uspark/issues"
  },
  "homepage": "https://github.com/uspark-hq/uspark#readme",
  "license": "MIT",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "uspark.showMenu",
        "title": "uSpark: Show Menu"
      },
      {
        "command": "uspark.login",
        "title": "uSpark: Login"
      },
      {
        "command": "uspark.logout",
        "title": "uSpark: Logout"
      },
      {
        "command": "uspark.syncNow",
        "title": "uSpark: Sync Now"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "dev": "tsc -watch -p ./",
    "watch": "tsc -watch -p ./",
    "test": "echo 'Run tests from turbo root: pnpm vitest --project vscode-extension' && exit 1",
    "vscode:prepublish": "pnpm compile",
    "vscode:package": "vsce package --no-dependencies",
    "vscode:publish": "vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^3.2.1",
    "msw": "^2.11.1",
    "typescript": "^5.0.0"
  }
}
